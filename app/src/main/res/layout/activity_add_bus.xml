<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30sp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Bus"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add or edit your bus"
        android:textColor="@color/black"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="5sp" />

    <EditText
        android:id="@+id/bus_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bus Name"
        android:layout_marginBottom="10sp"/>

    <!-- EditText for Capacity -->
    <EditText
        android:id="@+id/capacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Capacity"
        android:layout_marginBottom="10sp"/>

    <!-- EditText for Price -->
    <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prince"
        android:layout_marginBottom="10sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp"
        android:layout_marginBottom="9dp"
        android:gravity="center">
        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="Bus Type"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_directions_bus_24"
            app:tint="@color/black" />

        <Spinner
            android:id="@+id/departure_dropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp"
        android:layout_marginBottom="9dp"
        android:gravity="center">
        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="Departure"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_house_24"
            app:tint="@color/black" />

        <Spinner
            android:id="@+id/arrival_dropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp"
        android:layout_marginBottom="9dp"
        android:gravity="center">
        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="Arrival"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_forward_24"
            app:tint="@color/black" />

        <Spinner
            android:id="@+id/bus_type_dropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>


    <!-- Facilities CheckBoxes -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_marginVertical="10dp">

        <CheckBox
            android:id="@+id/ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC"
            android:paddingHorizontal="10dp"/>
        <CheckBox
            android:id="@+id/lcd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LCD TV"
            android:paddingHorizontal="10dp"/>
        <CheckBox
            android:id="@+id/baggage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Baggage"
            android:paddingHorizontal="10dp"/>

        <CheckBox
            android:id="@+id/wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wifi"
            android:paddingHorizontal="10dp"/>
        <CheckBox
            android:id="@+id/coolbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coolbox"
            android:paddingHorizontal="10dp"/>
        <CheckBox
            android:id="@+id/electric_socket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electric Socket"
            android:paddingHorizontal="10dp"/>
        <CheckBox
            android:id="@+id/toilet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toilet"
            android:paddingHorizontal="10dp"/>
        <CheckBox
            android:id="@+id/lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch"
            android:paddingHorizontal="10dp"/>

    </GridLayout>

    <!-- Add Bus Button -->
    <Button
        android:id="@+id/add_bus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="21dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="ADD"
        android:textColor="@color/white" />
</LinearLayout>
