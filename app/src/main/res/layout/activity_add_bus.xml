<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBusActivity"
    android:orientation="vertical"
    android:padding="30sp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Bus"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="30sp"
        android:text="Add or edit your bus"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/bus_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bus Name"
        android:layout_marginBottom="10sp"/>

    <EditText
        android:id="@+id/capacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Capacity"
        android:layout_marginBottom="10sp"/>

    <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price"
        android:layout_marginBottom="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="130dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/baseline_directions_bus_24"
            android:text="Bus Type"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:tint="@color/black" />


        <Spinner
            android:id="@+id/bus_type_dropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="130dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/baseline_home_24"
            android:text="Departure"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:tint="@color/black" />

        <Spinner
            android:id="@+id/departure_dropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="130dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/baseline_where_to_vote_24"
            android:text="Arrival"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:tint="@color/black" />

        <Spinner
            android:id="@+id/arrival_dropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facilities"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_marginVertical="5dp">
        <CheckBox
            android:id="@+id/ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC"
            android:paddingHorizontal="10dp"/>
        <CheckBox
            android:id="@+id/lcd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LCD TV"
            android:paddingHorizontal="10dp"/>
        <CheckBox
            android:id="@+id/baggage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Baggage"
            android:paddingHorizontal="10dp"/>

        <CheckBox
            android:id="@+id/wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wifi"
            android:paddingHorizontal="10dp"/>
        <CheckBox
            android:id="@+id/coolbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coolbox"
            android:paddingHorizontal="10dp"/>
        <CheckBox
            android:id="@+id/electric_socket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electric Socket"
            android:paddingHorizontal="10dp"/>
        <CheckBox
            android:id="@+id/toilet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toilet"
            android:paddingHorizontal="10dp"/>
        <CheckBox
            android:id="@+id/lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch"
            android:paddingHorizontal="10dp"/>

    </GridLayout>

    <Button
        android:id="@+id/add_bus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="20dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:text="ADD"
        android:textColor="@color/white" />


</LinearLayout>